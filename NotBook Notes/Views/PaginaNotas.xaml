<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NotBook_Notes.Views.PaginaNotas"
             Title="Notas">

        <VerticalStackLayout>

        <Frame
                BackgroundColor="{AppThemeBinding Dark={StaticResource Gray600}, Light={StaticResource Gray100}}"
                BorderColor="Transparent"
                CornerRadius="100"
                Padding="5"
                Margin="10"
            >
            <SearchBar Placeholder="Frase bonita random..." 
           Margin="5,0,5,0"/>
        </Frame>

        <Button 
            Text="+ Nueva Nota"
            HeightRequest="60"
            FontSize="20"
            FontAttributes="Bold"
            TextColor="{AppThemeBinding Light={StaticResource PrimaryDark}, Dark={DynamicResource PrimaryDark}}"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource OffLightBlack}}"
            BorderWidth="2"
            BorderColor="{AppThemeBinding Light={StaticResource SecondaryDarkText}, Dark={DynamicResource PrimaryDark}}"
            Margin="30,20"/>

    </VerticalStackLayout>
</ContentPage>